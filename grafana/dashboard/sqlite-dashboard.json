    "panels": [
      {
        "title": "Metric value over time",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "datasource": "frser-sqlite-datasource",
            "rawSql": "SELECT timestamp_value AS time, metric_value AS value, kpi_id FROM query_results qr JOIN clusters c ON qr.cluster_id = c.id WHERE c.cluster_name = '$cluster' ORDER BY time ASC;",
            "format": "time_series"
          }
        ]
      },
      {
        "title": "Errors over time",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "datasource": "frser-sqlite-datasource",
            "rawSql": "SELECT qr.id AS time, qe.errors AS value FROM query_errors qe JOIN query_results qr ON qr.kpi_id = qe.kpi_id JOIN clusters c ON qr.cluster_id = c.id WHERE c.cluster_name = '$cluster' ORDER BY time ASC;",
            "format": "table"
          }
        ]
      },
      {
        "title": "Metric values grouped by KPI",
        "type": "barchart",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "datasource": "frser-sqlite-datasource",
            "rawSql": "SELECT kpi_id AS metric, AVG(metric_value) AS value FROM query_results qr JOIN clusters c ON qr.cluster_id = c.id WHERE c.cluster_name = '$cluster' GROUP BY metric;",
            "format": "table"
          }
        ]
      },
      {
        "title": "Execution time over time",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "datasource": "frser-sqlite-datasource",
            "rawSql": "SELECT timestamp_value AS time, execution_time AS value, kpi_id FROM query_results qr JOIN clusters c ON qr.cluster_id = c.id WHERE c.cluster_name = '$cluster' ORDER BY time ASC;",
            "format": "time_series"
          }
        ]
      },
      {
        "title": "Summary table per KPI",
        "type": "table",
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
        "targets": [
          {
            "datasource": "frser-sqlite-datasource",
            "rawSql": "SELECT kpi_id, COUNT(*) AS sample_count, AVG(metric_value) AS avg_value, MIN(metric_value) AS min_value, MAX(metric_value) AS max_value FROM query_results qr JOIN clusters c ON qr.cluster_id = c.id WHERE c.cluster_name = '$cluster' GROUP BY kpi_id;",
            "format": "table"
          }
        ]
      }
    ],
    "refresh": "10s",
